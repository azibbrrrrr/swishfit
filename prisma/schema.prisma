// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                     String         @id @default(uuid())
  name                   String
  priceInCents           Int
  imagePath              String
  description            String
  isAvailableForPurchase Boolean        @default(true)
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  orders                 Order[] // Product can have many orders
  sizes                  ProductSize[]
  colors                 ProductColor[]
}

model ProductSize {
  id        Int     @id @default(autoincrement())
  productId String
  product   Product @relation(fields: [productId], references: [id])
  size      String
  stock     Int // Available stock for this size

  productColorId Int? // Optional reference to ProductColor if the size is associated with a color
  productColor   ProductColor? @relation(fields: [productColorId], references: [id])

  @@unique([productId, size])
}

model ProductColor {
  id        Int           @id @default(autoincrement())
  productId String
  product   Product       @relation(fields: [productId], references: [id])
  color     String
  stock     Int // Available stock for this color
  sizes     ProductSize[] // Sizes associated with this color (if any)

  @@unique([productId, color])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[] // User can have many orders
}

model Order {
  id               String   @id @default(uuid())
  pricePaidInCents Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  userId           String
  productId        String
  selectedSize     String // Added the selected size field
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product          Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
}
